                    <ImageBrush ImageSource="Assets/MainButtons/HFM 60x60.png" Stretch="Fill" />
                </Button.Background>
            </Button>
            <Button
                Name="ButtonNoticht"
                Grid.Row="1"
                Grid.Column="2"
                Width="60"
                Height="60"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="ButtonNoticht_Click"
                FontSize="12"
                Foreground="White">

                <Button.Background>
                    <ImageBrush ImageSource="Assets/MainButtons/notlicht lamp 60x60.png" Stretch="Fill" />
                </Button.Background>
            </Button>
            <Button
                Grid.Row="2"
                Grid.Column="0"
                Width="60"
                Height="60"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="White">
                <Button.Background>
                    <ImageBrush ImageSource="Assets/MainButtons/SN EN 60x60.png" Stretch="Fill" />
                </Button.Background>
            </Button>
            <Button
                Name="ButtonHFL"
                Grid.Row="2"
                Grid.Column="1"
                Width="60"
                Height="60"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="White">
                <Button.Background>
                    <ImageBrush ImageSource="Assets/MainButtons/HFl 60x60.png" Stretch="Fill" />
                </Button.Background>
            </Button>
            <Button
                Grid.Row="2"
                Grid.Column="2"
                Width="60"
                Height="60"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="White">
                <Button.Background>
                    <ImageBrush ImageSource="Assets/MainButtons/bmka 60x60.png" Stretch="Fill" />
                </Button.Background>
            </Button>

            <Button
                Grid.Row="3"
                Grid.Column="2"
                Width="60"
                Height="60"
                Margin="20,166,20,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Button.Background>
                    <ImageBrush ImageSource="Assets/MainButtons/info 60x60.png" Stretch="Fill" />
                </Button.Background>
            </Button>


            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Text="Picktogram"
                TextWrapping="Wrap" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Text="HFM"
                TextWrapping="Wrap" />
            <TextBlock
                Grid.Row="1"
                Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Text="Noticht"
                TextWrapping="Wrap" />
            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Text="SN EN"
                TextWrapping="Wrap" />
            <TextBlock
                Grid.Row="2"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Text="HFL"
                TextWrapping="Wrap" />
            <TextBlock
                Grid.Row="2"
                Grid.Column="2"
                HorizontalAlignment="Center"
