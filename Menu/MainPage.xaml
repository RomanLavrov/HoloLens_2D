                Grid.Row="1"
                Grid.Column="0"
                Width="60"
                Height="60"
                HorizontalAlignment="Center"
                VerticalAlignment=" Center"
                BorderBrush="Transparent"
                Click="ButtonPictogram_Click"
                FontSize="8"
                Foreground="Transparent">
                <Button.Background>
                    <ImageBrush ImageSource="Assets/MainButtons/Piktogram 60x60.png" Stretch="Fill" />
                </Button.Background>
            </Button>
            <Button
                Name="ButtonHFM"
