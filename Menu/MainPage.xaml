            <GridView
                Name="GridViewImages"
                Grid.Row="3"
                Grid.ColumnSpan="2"
                Width="190"
                Height="216"
                Margin="10,10,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="White"
                BorderBrush="Crimson"
                BorderThickness="1">

                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Image
                            Width="88"
                            Height="88"
                            Source="{Binding Source}"
                            Stretch="Fill" />

                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

        </Grid>
        <Grid
            Width="85"
            Height="480"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />

            </Grid.RowDefinitions>

            <Button
                Name="Konzept"
                Grid.Row="0"
                Width="60"
                Height="60"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="Konzept_Click"
                PointerEntered="ButtonKonzept_PointerEntered"
                PointerExited="Konzept_PointerExited">
                <Button.Background>
                    <ImageBrush ImageSource="Assets/LeftMenu/1_Konzept 60x60.png" Stretch="Fill" />
                </Button.Background>
            </Button>

            <Button
