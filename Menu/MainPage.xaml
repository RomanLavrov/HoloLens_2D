<Page
    x:Class="Menu.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Menu"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="852"
    Height="480"
    mc:Ignorable="d">
    <Page.Resources>
        <Color x:Key="HhmRed">#FFE20513</Color>
        <Style x:Key="CircleButton" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <GradientStop Offset="0" Color="Blue" />
                        <GradientStop Offset="1" Color="BlueViolet" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse
                                Margin="0"
                                Fill="Red"
                                RenderTransformOrigin="0.5, 0.5">
                                <Ellipse.RenderTransform>
                                    <ScaleTransform x:Name="Outter" ScaleY="-1" />
                                </Ellipse.RenderTransform>
                            </Ellipse>

                            <Ellipse
                                Margin="5"
                                Fill="Crimson"
                                RenderTransformOrigin="0.5, 0.5">
                                <Ellipse.RenderTransform>
                                    <ScaleTransform x:Name="Inner" ScaleY="-1" />
                                </Ellipse.RenderTransform>
                            </Ellipse>
                            <ContentPresenter
                                x:Name="content"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Disabled" />
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="MouseOver" />
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Inner" Storyboard.TargetProperty="(ScaleTransform.ScaleY)">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0.0" Value="1" />
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Outer" Storyboard.TargetProperty="(ScaleTransform.ScaleY)">
                                                <DiscreteObjectKeyFrame KeyTime="0:0:0.0" Value="-1" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="FocusStates">
                                    <VisualState x:Name="Focused" />
                                    <VisualState x:Name="Unfocused" />
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="Black">
        <Grid
            Name="GridButton"
            Width="300"
            Height="480"
            HorizontalAlignment="Right"
            VerticalAlignment="Top">
            <Grid.Background>
                <SolidColorBrush Color="White" />
            </Grid.Background>

            <Grid.RowDefinitions>
                <RowDefinition Height="0.25*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="2*" />

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.ColumnSpan="3" Background="#FFE20513">
                <TextBlock
                    Grid.Row="0"
                    Width="300"
                    Height="30"
                    Margin="0,0,0,-2"
                    HorizontalAlignment=" Center"
                    VerticalAlignment="Center"
                    FontSize="18"
                    Foreground="White"
                    Text="Sicherheits anlage"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />
            </Grid>

            <Button
