        <TextBox
            Name="TextBoxSchnitstelle"
            Width="170"
            Margin="90,88,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="Black"
            BorderBrush="Black"
            Foreground="White"
            IsReadOnly="True"
            Text="Schnitstelle ansane"
            TextWrapping="Wrap"
            Visibility="Collapsed" />
        <TextBox
            Name="TextBoxSchraffuren"
            Width="145"
